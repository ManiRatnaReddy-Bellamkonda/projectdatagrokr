<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
            <!-- <button "type="submit"  class="btn btn-info" name="button"><a href="/all" style="color: white"> Not,Intrested. Show the posts</a></button> -->
          </form>
            <a href="/all"><button  style="margin-top : 10px;" class="btn btn-info" type="submit" name="button">Not Intrested. Show the posts </button></a>
        </div>
      </div>
    </div>



  </div>
</div>

